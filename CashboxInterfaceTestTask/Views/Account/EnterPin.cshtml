@model PinViewModel

<p>Enter your pin</p>
<form method="post" asp-controller="Account" asp-action="EnterPin">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-froup">
        <label asp-for="Pin"></label>
        <input id="pin" asp-for="Pin" inputmode="numeric" onkeydown="return false" />
        <button type="submit">OK</button>
    </div>
</form>

<button id="clear">Clear</button>

<table id="number-buttons">
    <tbody>
        <tr>
            <td><button>7</button></td>
            <td><button>8</button></td>
            <td><button>9</button></td>
        </tr>
        <tr>
            <td><button>4</button></td>
            <td><button>5</button></td>
            <td><button>6</button></td>
        </tr>
        <tr>
            <td><button>1</button></td>
            <td><button>2</button></td>
            <td><button>3</button></td>
        </tr>
        <tr>
            <td width="33%"></td>
            <td><button>0</button></td>
            <td width="33%"></td>
        </tr>
    </tbody>
</table>

<form asp-controller="Account" asp-action="EnterCardNumber">
    <button class="btn" type="submit">Exit</button>
</form>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="~/js/enterPinScript.js"></script>